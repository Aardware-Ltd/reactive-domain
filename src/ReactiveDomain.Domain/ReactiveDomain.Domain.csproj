<Project Sdk="Microsoft.NET.Sdk">

 <PropertyGroup Condition="'$(OS)' == 'Windows_NT'">
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(OS)' == 'Unix'">
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyName>ReactiveDomain.Domain</AssemblyName>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <RootNamespace>ReactiveDomain</RootNamespace>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyVersion Condition="$(AssemblyVersion) == ''">0.0.0</AssemblyVersion>
    <FileVersion Condition="$(FileVersion) == ''">0.0.0</FileVersion>
    <InformationalVersion Condition="$(InformationalVersion) == ''">0.0.0</InformationalVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
    <Optimize>False</Optimize>
    <!-- <DocumentationFile>bin\Debug\net46\ReactiveDomain.Domain.xml</DocumentationFile> -->
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
    <Optimize>True</Optimize>
    <!-- <DocumentationFile>bin\Release\net46\ReactiveDomain.Domain.xml</DocumentationFile> -->
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
  </PropertyGroup>
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageVersion Condition="$(PackageVersion) == ''">0.0.0</PackageVersion>
    <PackageId>ReactiveDomain.Domain</PackageId>
    <Title>ReactiveDomain.Domain</Title>
    <Authors>Yves Reynhout;Christopher Condron</Authors>
    <Description>This package contains the core types to use when building an event sourced model in C#.</Description>
    <Copyright>Copyright Â© Linedata. All rights reserved.</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>https://github.com/linedata/Aggregate-Source-Integration/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/linedata/Aggregate-Source-Integration</PackageProjectUrl>
    <PackageReleaseNotes>Initial release.</PackageReleaseNotes>
    <PackageTags>eventsourcing;ddd</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>
    <IsTool>false</IsTool>
    <RepositoryUrl>https://github.com/linedata/Aggregate-Source-Integration</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <IncludeContentInPack>false</IncludeContentInPack>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="EventStore.ClientAPI.NetCore" Version="4.0.3-rc" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net46' ">
    <PackageReference Include="EventStore.Client" Version="4.0.0" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="EventStore.Client" Version="4.1.0" />
  </ItemGroup>
</Project>
